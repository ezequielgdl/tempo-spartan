{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ],
    "paths": {
      "@spartan-ng/ui-button-helm": [
        "./components/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-input-helm": [
        "./components/ui-input-helm/src/index.ts"
      ],
      "@spartan-ng/ui-formfield-helm": [
        "./components/ui-formfield-helm/src/index.ts"
      ],
      "@spartan-ng/ui-label-helm": [
        "./components/ui-label-helm/src/index.ts"
      ],
      "@spartan-ng/ui-dialog-helm": [
        "./components/ui-dialog-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        "./components/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-menu-helm": [
        "./components/ui-menu-helm/src/index.ts"
      ],
      "@spartan-ng/ui-tabs-helm": [
        "./components/ui-tabs-helm/src/index.ts"
      ],
      "@spartan-ng/ui-card-helm": [
        "./components/ui-card-helm/src/index.ts"
      ],
      "@spartan-ng/ui-typography-helm": [
        "./components/ui-typography-helm/src/index.ts"
      ],
      "@spartan-ng/ui-switch-helm": [
        "./components/ui-switch-helm/src/index.ts"
      ],
      "@spartan-ng/ui-toggle-helm": [
        "./components/ui-toggle-helm/src/index.ts"
      ],
      "@spartan-ng/ui-separator-helm": [
        "./components/ui-separator-helm/src/index.ts"
      ],
      "@spartan-ng/ui-table-helm": [
        "./components/ui-table-helm/src/index.ts"
      ],
      "@spartan-ng/ui-alertdialog-helm": [
        "./components/ui-alertdialog-helm/src/index.ts"
      ],
      "@spartan-ng/ui-spinner-helm": [
        "./components/ui-spinner-helm/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
